<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <Button
        android:id="@+id/btn_search_event_name"
        android:layout_width="match_parent"
        android:background="@drawable/background_search_event_name"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_gravity="center"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:text="Tên sự kiện"
        android:textColor="#fff"
        android:paddingLeft="20sp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="0sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa điểm"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/tv_search_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hồ Chí Minh"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:textColor="#000"
            android:editable="false"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000"></RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="loại sự kiện"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/tv_search_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tất cả các loại"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:textColor="#000"
            android:editable="false"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000"></RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="thời gian"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/tv_search_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tất cả các ngày sắp tới"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            android:drawableRight="@drawable/ic_right_arrow"
            android:textColor="#000"
            android:editable="false"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#000"></RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_search_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xong"
        android:background="@drawable/background_search_done"
        android:textColor="#fff"
        android:textSize="20sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"/>
</LinearLayout>