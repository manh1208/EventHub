<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_event_type_item"
        android:padding="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"></RelativeLayout>

        <com.linhv.eventhub.custom.SquareImageView
            android:id="@+id/iv_event_type_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            android:scaleType="centerCrop"
            android:src="@drawable/meeting" />

        <ImageView
            android:id="@+id/iv_event_type_check"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_check"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_event_type_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Hội thảo"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>