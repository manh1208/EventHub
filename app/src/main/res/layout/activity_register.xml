<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.linhv.eventhub.activity.LoginActivity">

    <com.linhv.eventhub.custom.CustomTextViewLight
        android:id="@+id/lb_register_back"
        android:layout_width="120sp"
        android:layout_height="20sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:background="@null"
        android:drawableLeft="@drawable/ic_come_back"
        android:drawablePadding="5sp"
        android:drawableTint="#fff"
        android:gravity="center_vertical"
        android:paddingLeft="10sp"
        android:text="BACK"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.linhv.eventhub.custom.CustomImage
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="40sp"
        android:src="@drawable/image_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="30sp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edittext"
            android:hint="EMAIL"
            android:paddingBottom="10sp"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"

            />

        <EditText
            android:id="@+id/txt_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/background_edittext"
            android:hint="USERNAME"
            android:paddingBottom="10sp"
            android:paddingLeft="5sp"
            android:paddingTop="10sp"
            />

        <EditText
            android:id="@+id/txt_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/background_edittext"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:paddingBottom="10sp"
            android:paddingLeft="5sp"
            android:paddingTop="10sp" />

        <EditText
            android:id="@+id/txt_register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/background_edittext"
            android:hint="CONFIRM PASSWORD"
            android:inputType="textPassword"
            android:paddingBottom="10sp"
            android:paddingLeft="5sp"
            android:paddingTop="10sp" />

        <ImageButton
            android:id="@+id/btn_register_next"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next" />

        <!--<com.facebook.login.widget.LoginButton-->
            <!--android:id="@+id/btn_login_with_facebook"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginBottom="30dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:textSize="20sp" />-->
    </LinearLayout>

</RelativeLayout>
