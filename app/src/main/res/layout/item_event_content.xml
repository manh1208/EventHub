<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50sp"
        android:paddingTop="10sp">

        <!--<com.linhv.eventhub.custom.CustomImage-->
        <!--android:id="@+id/iv_event_detail_cover"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/image_cover_event" />-->

        <!--<TextView-->
        <!--android:id="@+id/txt_event_detail_name"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10sp"-->
        <!--android:gravity="center"-->
        <!--android:text="NGuyễn Vũ Linh"-->
        <!--android:textColor="#000"-->
        <!--android:textSize="30sp"-->
        <!--android:textStyle="bold" />-->
        <RatingBar
            android:id="@+id/content_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:numStars="5"
            android:stepSize="0.5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/txt_content_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ " />

            <TextView
                android:id="@+id/txt_num_of_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1050" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" lượt đánh giá" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:background="@drawable/background_event_infor"
            android:orientation="vertical"
            android:paddingBottom="10sp"
            android:paddingTop="10sp">

            <TextView
                android:id="@+id/txt_event_detail_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="01.07.2016"
                android:textColor="#000"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"

                android:layout_marginTop="10sp"
                android:background="#000" />

            <TextView
                android:id="@+id/txt_event_detail_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="Nhà Thi đấu Nguyễn Du"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal">

            <com.facebook.share.widget.ShareButton
                android:id="@+id/btn_share_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<com.facebook.share.widget.LikeView-->
            <!--android:id="@+id/btn_like_facebook"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingLeft="10sp">-->

            <!--</com.facebook.share.widget.LikeView>-->
            <Button
                android:id="@+id/btn_event_organizer"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@+id/btn_share_facebook"
                android:background="@drawable/background_organizer"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="Nhà tổ chức"
                android:textColor="#fff" />
        </RelativeLayout>

        <WebView
            android:id="@+id/wv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></WebView>
        <!--<TextView-->
        <!--android:id="@+id/txt_event_detail_description"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="5sp"-->
        <!--android:layout_marginRight="5sp"-->
        <!--android:textColor="#000"-->
        <!--android:text="ahihi"/>-->
    </LinearLayout>
</LinearLayout>