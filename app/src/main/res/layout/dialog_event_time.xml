<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="20sp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <RadioGroup
        android:id="@+id/rbg_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp">

        <RadioButton
            android:id="@+id/rb_search_all_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50sp"
            android:gravity="right|center_vertical"
            android:paddingRight="20sp"
            android:text="Tất cả các ngày sắp tới" />

        <RadioButton
            android:id="@+id/rb_search_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="20sp"
            android:text="Hôm nay" />
        <RadioButton
            android:id="@+id/rb_search_this_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="20sp"
            android:text="Tuần này" />
        <RadioButton
            android:id="@+id/rb_search_next_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="20sp"
            android:text="Tuần tới" />
        <RadioButton
            android:id="@+id/rb_search_this_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingRight="20sp"
            android:text="Tháng này" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tùy chọn"
        android:textAllCaps="true"
        android:layout_marginLeft="20sp"/>

    <EditText
        android:id="@+id/txt_search_from_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:drawablePadding="20sp"
        android:drawableRight="@drawable/ic_calendar"
        android:drawableTint="#737373"
        android:padding="5sp"
        android:hint="Từ ngày"
        android:textSize="16sp"
        android:background="@drawable/background_date_time_picker"/>
    <EditText
        android:id="@+id/txt_search_to_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:drawablePadding="20sp"
        android:drawableRight="@drawable/ic_calendar"
        android:drawableTint="#737373"
        android:hint="Đến ngày"
        android:padding="5sp"
        android:textSize="16sp"
        android:background="@drawable/background_date_time_picker"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">
    <Button
        android:id="@+id/btn_event_time_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:layout_centerInParent="true"
        android:text="Xong"/>
    </RelativeLayout>
</LinearLayout>