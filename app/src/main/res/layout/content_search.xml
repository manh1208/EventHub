<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.linhv.eventhub.activity.SearchActivity"
    tools:showIn="@layout/activity_search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <!--<EditText-->
            <!--android:id="@+id/btn_search_event_name"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginLeft="50sp"-->
            <!--android:layout_marginRight="50sp"-->
            <!--android:layout_marginTop="40sp"-->
            <!--android:background="@drawable/background_search_event_name"-->
            <!--android:drawableLeft="@drawable/ic_search"-->
            <!--android:drawablePadding="0sp"-->
            <!--android:gravity="center"-->
            <!--android:hint="Tên sự kiện"-->
            <!--android:textColorHint="#aee0ed"-->
            <!--android:padding="10sp"-->
            <!--android:paddingLeft="20sp"-->
            <!--android:textColor="#fff"-->
            <!--android:textSize="20sp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="50sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa điểm"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_search_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:drawableRight="@drawable/ic_right_arrow"
                android:editable="false"
                android:text="Hồ Chí Minh"
                android:textColor="#000"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#000"></RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="loại sự kiện"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_search_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:drawableRight="@drawable/ic_right_arrow"
                android:editable="false"
                android:text="Tất cả các loại"
                android:textColor="#000"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#000"></RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="thời gian"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_search_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:drawableRight="@drawable/ic_right_arrow"
                android:editable="false"
                android:text="Tất cả các ngày sắp tới"
                android:textColor="#000"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#000"></RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_search_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:background="@drawable/background_search_done"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:text="Xong"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
